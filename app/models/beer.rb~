class Beer < ActiveRecord::Base
belongs_to :brewery
has_many :ratings, dependent: :destroy


 def average_rating
  sum = 0
  array = ratings.to_a
  array.each{|rating| sum+=rating.score}
  (sum/(array.length.to_f)).round(1)
 end

 def ratings_count
  array = ratings.to_a
  array.length
 end

 def to_s
  "#{name}, #{brewery.name}"
 end

end
